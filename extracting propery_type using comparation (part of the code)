        list_status = None
        previous_header = None
        
        for elm in soup.select('div#content > div.heading P-Heading'):
            tags = [t for t in elm if type(t) is Tag and t.name in ('span', 'div',)]
            for tag in tags:
                
                if tag.name == 'span':
                    previous_header = tag.text
                
                elif previous_header == 'For Sale':
                    list_status = tag.text
            
            if list_status is not None:
                break
